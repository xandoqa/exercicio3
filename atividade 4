#include <stdio.h>
#include <locale.h>

int main() {
    setlocale(LC_ALL, "Portuguese"); 
    
    float peso;
    float peso_minimo = 60;
    
    printf("Digite o seu peso: ");
    scanf("%f", &peso);
    
    if (peso > peso_minimo) {
        printf("mais pesado que a média.\n");
    } else {
        printf("é igual ou mais leve que a média.\n");
    }
    
}
