#include <stdio.h>
#include <locale.h>

int main() {
    setlocale(LC_ALL, "Portuguese"); 
    
    float altura;
    float altura_minimo = 1.8;
    
    printf("Digite a sua altura: ");
    scanf("%f", &altura);
    
    if (altura >altura_minimo) {
        printf("é maior que a média.\n");
    } else {
        printf("é igual ou menor que a média.\n");
    }
    
}
